{
    "name": "MyDeepSpectrum",
    "n_gpu": 1,
    "arch": {
        "type": "Simple",
        "args": {
            "input_dim": 2000,
            "output_dim": 646,
            "layers": 6,
            "res_width": 512,
            "dropout": 0.2
        }
    },
    "data_loader": {
        "type": "SpectrumDataloader",
        "args": {
            "x_data_dir": "data/peakvec_train_fix.npz",
            "y_data_dir": "data/fingerprints_train.npz",
            "mw_dir": "data/mw_train.npy",
            "keep_dir": "data/fpkeep_01_09.txt",
            "batch_size": 512,
            "shuffle": true,
            "validation_split": 0.1
        }
    },
    "optimizer": {
        "type": "Adam",
        "args": {
            "lr": 0.0008
        }
    },
    "loss": "MultiLabelBCELoss",
    "metrics": [
        "accuracy"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 20,
            "gamma": 0.95,
            "verbose": true
        }
    },
    "trainer": {
        "epochs": 4000,
        "save_dir": "saved/simple/",
        "save_period": 300,
        "verbosity": 2,
        "monitor": "min val_loss",
        "early_stop": 70,
        "early_stop_activate": 30,
        "tensorboard": false
    }
}