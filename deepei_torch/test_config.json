{
    "name": "MyDeepSpectrum",
    "n_gpu": 1,

    "arch": {
        "type": "Simple",
        "args": {
            "input_dim": 2000,
            "output_dim": 646,
            "layers": 6,
            "res_width": 512,
            "dropout": 0.2
        }
    },
    "data_loader": {
        "type": "SpectrumDataloader",
        "args":{
            "x_data_dir" : "data/peakvec_val_fix.npz",
            "y_data_dir": "data/fingerprints_val.npz",
            "mw_dir": "data/mw_val.npy",
            "keep_dir": "data/fpkeep_01_09.txt",
            "batch_size": 64,
            "shuffle": false,
            "validation_split": 0.0
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 1e-4
        }
    },
    "loss": "MultiLabelBCELoss",
    "metrics": [
        "accuracy"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 20,
            "gamma": 0.95,
            "verbose": true
        }
    },
    "trainer": {
        "epochs": 2000,

        "save_dir": "saved/simple/test/",
        "save_period": 30,
        "verbosity": 2,
        
        "monitor": "min val_loss",
        "early_stop": 30,
        "early_stop_activate": 10,

        "tensorboard": true
    }
}
